extends layout

block content
  link(href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet")
  form(class="article_form" action="" name="form")
    input(type="text" name="username" value="" placeholder="USERNAME")
    input(type="text" name="title" value="" placeholder="TITLE")
    #toolbar
      button.ql-bold Bold
      button.ql-italic Italic
    #editor
      textarea(id="editor" name="content" cols="40" rows="3" type="text") 
    script(src="https://cdn.quilljs.com/1.3.6/quill.js")
    script. 
      var editor = new Quill('#editor', {
      modules: { toolbar: '#toolbar' },
      theme: 'snow'
      });
    br
    input(name="review" cols="40" rows="3" type="text" placeholder="REVIEW" class="review")
    br
    input(type="submit" name="submit" class="form-container__btn" value="Отправить")
    script(src='/javascripts/main.js')